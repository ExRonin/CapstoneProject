<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmer_1"
        android:layout_width="@dimen/custom_250"
        android:layout_height="@dimen/custom_180"
        app:cardCornerRadius="@dimen/normal_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmer_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/custom_180"
        app:cardCornerRadius="@dimen/normal_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmer_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/normal_100"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>