<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/normal_75"
    android:layout_marginBottom="@dimen/normal_125">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_advertising_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_image_110"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/normal_100" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_ads_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/default_text"
                    tools:text="@string/videotron_grand_indonesia"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/body_1"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/container_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_blue"
                    android:paddingVertical="@dimen/small_25"
                    android:paddingHorizontal="@dimen/small_100"
                    >

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pembayaran"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/caption"
                        android:textAllCaps="true"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ads_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                tools:text="@tools:sample/full_names"
                android:fontFamily="@font/poppins" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>